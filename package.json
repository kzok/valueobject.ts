{
  "private": true,
  "name": "valueobject.ts",
  "version": "0.1.0",
  "description": "Tiny typesafe value object library for TypeScript",
  "keywords": [
    "TypeScript",
    "typesafe",
    "value-object"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --watch",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --write **/*.{js,json,md}",
    "lint:eslint": "eslint --fix src/**/*.ts",
    "check": "run-s check:*",
    "check:jest": "jest",
    "check:typescript": "tsc --noEmit --skipLibCheck"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "tabWidth": 4,
          "printWidth": 120
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "rootDir": "./src",
    "testMatch": [
      "<rootDir>/**/*.spec.ts{,x}"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
